<UserControl
    x:Class="Jg.wpf.app.Controls.ButtonsDemo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <StackPanel
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Orientation="Horizontal">
            <Button
                Width="60"
                Height="60"
                Margin="16,16,24,24"
                Padding="0"
                FocusVisualStyle="{x:Null}"
                Style="{StaticResource Jg.Star.Button}">
                <Button.Content>
                    <materialDesign:PackIcon
                        Width="20"
                        Height="20"
                        Margin="0,4,0,0"
                        Kind="Star" />
                </Button.Content>
            </Button>
            <Button
                Width="120"
                Padding="0"
                FocusVisualStyle="{x:Null}"
                Style="{StaticResource Jg.Custom1.Button}">
                <Button.Content>
                    <TextBlock Margin="-14,4,4,4" Text="左按钮" />
                </Button.Content>
            </Button>
            <Button
                Width="120"
                Margin="-28,8,8,8"
                Padding="0"
                FocusVisualStyle="{x:Null}"
                Style="{StaticResource Jg.Custom2.Button}">
                <Button.Content>
                    <TextBlock Margin="24,4,4,4" Text="右按钮" />
                </Button.Content>
            </Button>
            <Button
                Height="48"
                Margin="20,0,0,10"
                Padding="0"
                FocusVisualStyle="{x:Null}"
                Style="{StaticResource Jg.Apple.Button}" />


        </StackPanel>
    </Grid>
</UserControl>
