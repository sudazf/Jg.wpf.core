<UserControl x:Class="Jg.wpf.app.Controls.CoverFlowContent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Jg.wpf.app.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Width="260" Height="400">
        <Border BorderThickness="1" BorderBrush="{DynamicResource PrimaryHueMidBrush}" Background="White">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Image x:Name="MyImage" />
                <Button Grid.Row="1" Margin="4" Content="EasyTest" />
                <TextBox Grid.Row="2" Margin="4" Text="Hello" />
            </Grid>
        </Border>
    </Grid>
</UserControl>
