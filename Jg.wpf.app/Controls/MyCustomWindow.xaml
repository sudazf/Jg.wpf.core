<customWindows:CustomWindow
    x:Class="Jg.wpf.app.Controls.MyCustomWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:customWindows="clr-namespace:Jg.wpf.controls.Customer.CustomWindows;assembly=Jg.wpf.controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="This is title."
    Width="800"
    Height="450"
    Icon="../Resources/Image/Tomato.ico"
    Style="{StaticResource Custom.Window}"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <customWindows:CustomWindow.NonClientAreaContent>
        <Grid>
            <StackPanel Orientation="Horizontal">
                <TextBlock
                    Margin="40,4,8,4"
                    VerticalAlignment="Center"
                    FontSize="20"
                    FontWeight="Bold"
                    Foreground="ForestGreen"
                    Text="other infos here~" />
                <Button
                    Height="48"
                    Margin="8,0,0,0"
                    Padding="0"
                    Click="OnTestClick"
                    FocusVisualStyle="{x:Null}"
                    Style="{StaticResource Jg.Apple.Button}">
                    <Button.LayoutTransform>
                        <ScaleTransform ScaleX="0.6" ScaleY="0.6" />
                    </Button.LayoutTransform>
                </Button>
            </StackPanel>
        </Grid>
    </customWindows:CustomWindow.NonClientAreaContent>
    <Grid />
</customWindows:CustomWindow>
