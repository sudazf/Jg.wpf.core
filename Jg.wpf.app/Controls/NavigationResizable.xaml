                <navigation:NavigatorItem Icon="Apple" Display="菜单三" />
            </navigation:NavigatorGroup>
            <navigation:NavigatorGroup GroupName="菜单组合二">
                <navigation:NavigatorItem Icon="Apple" Display="菜单一" />
                <navigation:NavigatorItem Icon="Apple" Display="菜单三" />
            </navigation:NavigatorGroup>
            <navigation:NavigatorGroup GroupName="菜单组合三">
                <navigation:NavigatorItem Icon="Apple" Display="菜单一" />
            </navigation:NavigatorGroup>
        </navigation:ResizableNavigator>
    </Grid>
</UserControl>
