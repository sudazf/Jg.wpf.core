<UserControl
    x:Class="Jg.wpf.app.Controls.RoiEditorDemo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:customImage="clr-namespace:Jg.wpf.controls.Customer.CustomImage;assembly=Jg.wpf.controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:Jg.wpf.app.ViewModels"
    d:DataContext="{d:DesignInstance viewModels:RoiEditorViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="auto" />
        </Grid.ColumnDefinitions>

        <customImage:RoiImage
            x:Name="Image"
            Width="540"
            Height="720"
            RoiSet="{Binding Rois}" />

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <TextBlock Margin="4" Text="Roi坐标:" />
            <ItemsControl
                Grid.Row="1"
                Margin="4"
                ItemsSource="{Binding Rois}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock
                                Margin="4"
                                VerticalAlignment="Center"
                                Text="X:" />
                            <TextBox
                                Width="40"
                                Margin="4"
                                VerticalAlignment="Center"
                                Text="{Binding X}" />
                            <TextBlock
                                Margin="4"
                                VerticalAlignment="Center"
                                Text="Y:" />
                            <TextBox
                                Width="40"
                                Margin="4"
                                VerticalAlignment="Center"
                                Text="{Binding Y}" />
                            <TextBlock
                                Margin="4"
                                VerticalAlignment="Center"
                                Text="Width:" />
                            <TextBox
                                Width="40"
                                Margin="4"
                                VerticalAlignment="Center"
                                Text="{Binding Width}" />
                            <TextBlock
                                Margin="4"
                                VerticalAlignment="Center"
                                Text="Height:" />
                            <TextBox
                                Width="40"
                                Margin="4"
                                VerticalAlignment="Center"
                                Text="{Binding Height}" />
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Vertical" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>
        </Grid>
    </Grid>
</UserControl>
