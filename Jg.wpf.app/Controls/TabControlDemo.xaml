<UserControl
    x:Class="Jg.wpf.app.Controls.TabControlDemo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Jg.wpf.app.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:Jg.wpf.app.ViewModels"
    d:DataContext="{d:DesignInstance viewModels:TabControlViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <TabControl
            ItemsSource="{Binding TestItems}"
            Style="{StaticResource Jg.Animation.TabControl}"
            TabStripPlacement="Top">
            <TabControl.ItemTemplate>
                <DataTemplate>
                    <TextBlock Margin="4" Text="{Binding .}" />
                </DataTemplate>
            </TabControl.ItemTemplate>
            <TabControl.ContentTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock Margin="4" Text="{Binding .}" />
                        <Button
                            Width="100"
                            DataContext="{Binding DataContext, RelativeSource={RelativeSource Mode=FindAncestor, AncestorLevel=1, AncestorType=TabControl}}"
                            Command="{Binding AddCommand}"
                            Content="Add" />
                    </StackPanel>
                </DataTemplate>
            </TabControl.ContentTemplate>
        </TabControl>

        <TabControl
            Grid.Row="1"
            Grid.Column="0"
            Style="{StaticResource Jg.Animation.TabControl}"
            TabStripPlacement="Left">
            <TabItem Header="标题1111111">
                <Grid>
                    <TextBlock
                        Margin="4"
                        FontSize="40"
                        Foreground="LightGray"
                        Text="Tab 1" />
                </Grid>
            </TabItem>
            <TabItem Header="标题222">
                <Grid>
                    <TextBlock
                        Margin="4"
                        FontSize="40"
                        Foreground="LightGray"
                        Text="Tab 2" />
                </Grid>
            </TabItem>
            <TabItem Header="标题333333">
                <Grid>
                    <TextBlock
                        Margin="4"
                        FontSize="40"
                        Foreground="LightGray"
                        Text="Tab 3" />
                </Grid>
            </TabItem>
            <TabItem Header="标题444444">
                <Grid>
                    <TextBlock
                        Margin="4"
                        FontSize="40"
                        Foreground="LightGray"
                        Text="Tab 4" />
                </Grid>
            </TabItem>
        </TabControl>

        <TabControl
            Grid.Row="0"
            Grid.Column="1"
            Style="{StaticResource Jg.Animation.TabControl}"
            TabStripPlacement="Bottom">
            <TabItem Header="标题1111111">
                <Grid>
                    <TextBlock
                        Margin="4"
                        FontSize="40"
                        Foreground="LightGray"
                        Text="Tab 1" />
                </Grid>
            </TabItem>
            <TabItem Header="标题222">
                <Grid>
                    <TextBlock
                        Margin="4"
                        FontSize="40"
                        Foreground="LightGray"
                        Text="Tab 2" />
                </Grid>
            </TabItem>
            <TabItem Header="标题333333">
                <Grid>
                    <TextBlock
                        Margin="4"
                        FontSize="40"
                        Foreground="LightGray"
                        Text="Tab 3" />
                </Grid>
            </TabItem>
            <TabItem Header="标题444444">
                <Grid>
                    <TextBlock
                        Margin="4"
                        FontSize="40"
                        Foreground="LightGray"
                        Text="Tab 4" />
                </Grid>
            </TabItem>

        </TabControl>

        <TabControl
            Grid.Row="1"
            Grid.Column="1"
            Style="{StaticResource Jg.Animation.TabControl}"
            TabStripPlacement="Right">
            <TabItem Header="标题1111111">
                <Grid>
                    <TextBlock
                        Margin="4"
                        FontSize="40"
                        Foreground="LightGray"
                        Text="Tab 1" />
                </Grid>
            </TabItem>
            <TabItem Header="标题222">
                <Grid>
                    <TextBlock
                        Margin="4"
