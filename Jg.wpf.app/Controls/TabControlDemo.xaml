<UserControl
    x:Class="Jg.wpf.app.Controls.TabControlDemo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:assist="clr-namespace:Jg.wpf.controls.Assist;assembly=Jg.wpf.controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Jg.wpf.app.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:Jg.wpf.app.ViewModels"
    d:DataContext="{d:DesignInstance viewModels:TabControlViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <TabControl
            SelectionChanged="OnParentSelectionChanged"
            Style="{StaticResource Jg.Animation.TabControl}"
            TabStripPlacement="Top">
            <TabItem Header="Title1">
                <ListBox ItemsSource="{Binding TestItems}" SelectedItem="{Binding SelectedItem}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Margin="4" Text="{Binding Name}" />
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </TabItem>
            <TabItem Header="Title2">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="2*" />
                    </Grid.RowDefinitions>
                    <Button Width="200" Content="Focusable Control" />
                    <TabControl
                        Grid.Row="1"
                        assist:TabContentPreservation.IsContentPreserved="True"
                        ItemsSource="{Binding SelectedItem.SubItems}"
                        Loaded="FrameworkElement_OnLoaded"
                        SelectedItem="{Binding SelectedItem.SelectedItem}"
                        Style="{StaticResource Jg.Animation.TabControl}"
                        TabStripPlacement="Top">
                        <TabControl.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Margin="4" Text="{Binding SubName}" />
                            </DataTemplate>
                        </TabControl.ItemTemplate>
                        <TabControl.ContentTemplate>
                            <DataTemplate>
                                <TextBlock Margin="4" Text="{Binding SubName}" />
                            </DataTemplate>
                        </TabControl.ContentTemplate>
                    </TabControl>
                </Grid>

            </TabItem>
        </TabControl>

        <TabControl
            Grid.Row="1"
            Grid.Column="0"
            Style="{StaticResource Jg.Animation.TabControl}"
            TabStripPlacement="Left">
            <TabItem Header="标题1111111">
                <Grid>
                    <TextBlock
                        Margin="4"
                        FontSize="40"
                        Foreground="LightGray"
                        Text="Tab 1" />
                </Grid>
            </TabItem>
            <TabItem Header="标题222">
                <Grid>
                    <TextBlock
                        Margin="4"
                        FontSize="40"
                        Foreground="LightGray"
                        Text="Tab 2" />
                </Grid>
            </TabItem>
            <TabItem Header="标题333333">
                <Grid>
                    <TextBlock
                        Margin="4"
                        FontSize="40"
                        Foreground="LightGray"
                        Text="Tab 3" />
                </Grid>
            </TabItem>
            <TabItem Header="标题444444">
                <Grid>
                    <TextBlock
                        Margin="4"
                        FontSize="40"
                        Foreground="LightGray"
                        Text="Tab 4" />
                </Grid>
            </TabItem>
        </TabControl>

        <TabControl
            Grid.Row="0"
            Grid.Column="1"
            Style="{StaticResource Jg.Animation.TabControl}"
            TabStripPlacement="Bottom">
            <TabItem Header="标题1111111">
                <Grid>
                    <TextBlock
                        Margin="4"
                        FontSize="40"
                        Foreground="LightGray"
                        Text="Tab 1" />
                </Grid>
            </TabItem>
            <TabItem Header="标题222">
                <Grid>
                    <TextBlock
                        Margin="4"
                        FontSize="40"
                        Foreground="LightGray"
                        Text="Tab 2" />
                </Grid>
            </TabItem>
            <TabItem Header="标题333333">
                <Grid>
                    <TextBlock
                        Margin="4"
                        FontSize="40"
                        Foreground="LightGray"
                        Text="Tab 3" />
                </Grid>
            </TabItem>
            <TabItem Header="标题444444">
                <Grid>
                    <TextBlock
                        Margin="4"
                        FontSize="40"
                        Foreground="LightGray"
                        Text="Tab 4" />
                </Grid>
            </TabItem>

        </TabControl>

        <TabControl
            Grid.Row="1"
            Grid.Column="1"
            Style="{StaticResource Jg.Animation.TabControl}"
            TabStripPlacement="Right">
            <TabItem Header="标题1111111">
                <Grid>
                    <TextBlock
                        Margin="4"
                        FontSize="40"
                        Foreground="LightGray"
                        Text="Tab 1" />
                </Grid>
            </TabItem>
            <TabItem Header="标题222">
                <Grid>
                    <TextBlock
                        Margin="4"
                        FontSize="40"
                        Foreground="LightGray"
                        Text="Tab 2" />
                </Grid>
            </TabItem>
            <TabItem Header="标题333333">
                <Grid>
                    <TextBlock
                        Margin="4"
                        FontSize="40"
                        Foreground="LightGray"
                        Text="Tab 3" />
                </Grid>
            </TabItem>
            <TabItem Header="标题444444">
                <Grid>
                    <TextBlock
                        Margin="4"
                        FontSize="40"
                        Foreground="LightGray"
                        Text="Tab 4" />
                </Grid>
            </TabItem>

        </TabControl>
    </Grid>
</UserControl>
