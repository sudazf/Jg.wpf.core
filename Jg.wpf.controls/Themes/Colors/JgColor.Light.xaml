<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:po="http://schemas.microsoft.com/winfx/2006/xaml/presentation/options">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/MaterialDesignColors;component/Themes/MaterialDesignColor.Blue.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <SolidColorBrush
        x:Key="TabHeaderHighlightBrush"
        po:Freeze="True"
        Color="{StaticResource Primary500}" />
    <SolidColorBrush
        x:Key="TabHeaderInactiveBrush"
        po:Freeze="True"
        Color="#89000000" />

    <SolidColorBrush x:Key="TextForeground" po:Freeze="True" Color="#1E1E1E" />
    <SolidColorBrush x:Key="SelectedTextForeground" po:Freeze="True" Color="White" />
    <SolidColorBrush x:Key="SelectedItemBackground" Color="{StaticResource Primary500}" po:Freeze="True" />
    <SolidColorBrush x:Key="MouseOverItemTextForeground" Color="White" po:Freeze="True" />
    <SolidColorBrush x:Key="MouseOverItemBackground" Color="LightGray" po:Freeze="True" />
    <SolidColorBrush x:Key="MenuHeaderForeground" Color="#1E1E1E" po:Freeze="True" />

</ResourceDictionary>