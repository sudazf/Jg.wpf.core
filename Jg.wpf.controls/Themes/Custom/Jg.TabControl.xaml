<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:mde="https://spiegelp.github.io/MaterialDesignExtensions/winfx/xaml">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/MaterialDesignExtensions;component/Themes/TabControlTemplates.xaml" />

    </ResourceDictionary.MergedDictionaries>

    <Style x:Key="Jg.Default.TabControl" TargetType="{x:Type TabControl}" BasedOn="{StaticResource MaterialDesignTabControl}">
        <Setter Property="mde:TabControlAssist.TabHeaderHorizontalAlignment" Value="Stretch" />
    </Style>

    <Style x:Key="Jg.TabControl" TargetType="{x:Type TabControl}" BasedOn="{StaticResource Jg.Default.TabControl}">
        <Setter Property="mde:TabControlAssist.TabHeaderHighlightBrush" Value="#DEDEDE" />
        <Setter Property="mde:TabControlAssist.TabHeaderInactiveBrush" Value="Gray" />
        
    </Style>
</ResourceDictionary>